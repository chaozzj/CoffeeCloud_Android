<?xml version='1.0' encoding='utf-8'?>
<widget id="com.coffee.cloud.anacaf" version="3.6.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Coffee Cloud Anacafé</name>
    <description>
        Información y herramientas para Productores de Café en Anacafé
    </description>
    <author email="centroclimaorg@gmail.com" href="http://centroclima.org">
        CentroClima
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name="loadUrlTimeoutValue" value="700000" />
    <preference name="SplashScreenDelay" value="6000" />
    <preference name="Orientation" value="portrait" />
    <platform name="android">
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon qualifier="ldpi" src="res/icon/android/drawable-ldpi-icon.png" />
        <icon qualifier="mdpi" src="res/icon/android/drawable-mdpi-icon.png" />
        <icon qualifier="hdpi" src="res/icon/android/drawable-hdpi-icon.png" />
        <icon qualifier="xhdpi" src="res/icon/android/drawable-xhdpi-icon.png" />
        <icon qualifier="xxhdpi" src="res/icon/android/drawable-xxhdpi-icon.png" />
        <icon qualifier="xxxhdpi" src="res/icon/android/drawable-xxxhdpi-icon.png" />
        <splash qualifier="land-ldpi" src="res/screen/android/screen-ldpi-landscape.png" />
        <splash qualifier="land-mdpi" src="res/screen/android/screen-mdpi-landscape.png" />
        <splash qualifier="land-hdpi" src="res/screen/android/screen-hdpi-landscape.png" />
        <splash qualifier="land-xhdpi" src="res/screen/android/screen-xhdpi-landscape.png" />
        <splash qualifier="land-xxhdpi" src="res/screen/android/screen-xxhdpi-landscape.png" />
        <splash qualifier="land-xxxhdpi" src="res/screen/android/screen-xxxhdpi-landscape.png" />
        <splash qualifier="port-ldpi" src="res/screen/android/screen-ldpi-portrait.png" />
        <splash qualifier="port-mdpi" src="res/screen/android/screen-mdpi-portrait.png" />
        <splash qualifier="port-hdpi" src="res/screen/android/screen-hdpi-portrait.png" />
        <splash qualifier="port-xhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
        <splash qualifier="port-xxhdpi" src="res/screen/android/screen-xxhdpi-portrait.png" />
        <splash qualifier="port-xxxhdpi" src="res/screen/android/screen-xxxhdpi-portrait.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="57" platform="ios" src="res/icon/ios/icon.png" width="57" />
        <icon height="114" platform="ios" src="res/icon/ios/icon@2x.png" width="114" />
        <icon height="40" platform="ios" src="res/icon/ios/icon-40.png" width="40" />
        <icon height="80" platform="ios" src="res/icon/ios/icon-40@2x.png" width="80" />
        <icon height="50" platform="ios" src="res/icon/ios/icon-50.png" width="50" />
        <icon height="100" platform="ios" src="res/icon/ios/icon-50@2x.png" width="100" />
        <icon height="60" platform="ios" src="res/icon/ios/icon-60.png" width="60" />
        <icon height="120" platform="ios" src="res/icon/ios/icon-60@2x.png" width="120" />
        <icon height="180" platform="ios" src="res/icon/ios/icon-60@3x.png" width="180" />
        <icon height="72" platform="ios" src="res/icon/ios/icon-72.png" width="72" />
        <icon height="144" platform="ios" src="res/icon/ios/icon-72@2x.png" width="144" />
        <icon height="76" platform="ios" src="res/icon/ios/icon-76.png" width="76" />
        <icon height="152" platform="ios" src="res/icon/ios/icon-76@2x.png" width="152" />
        <icon height="29" platform="ios" src="res/icon/ios/icon-small.png" width="29" />
        <icon height="58" platform="ios" src="res/icon/ios/icon-small@2x.png" width="58" />
        <icon height="87" platform="ios" src="res/icon/ios/icon-small@3x.png" width="87" />
        <splash height="1920" src="res/screen/ios/screen-iphone-portrait_1080x1920.png" width="1080" />
        <splash height="1334" src="res/screen/ios/screen-iphone-portrait-750x1334.png" width="750" />
        <splash height="2208" src="res/screen/ios/screen-iphone-portrait_1242x2208.png" width="1242" />
        <splash height="1242" src="res/screen/ios/screen-iphone-landscape_2208x1242.png" width="2208" />
        <splash height="1136" platform="ios" src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
        <splash height="1536" platform="ios" src="res/screen/ios/screen-ipad-landscape-2x.png" width="2048" />
        <splash height="768" platform="ios" src="res/screen/ios/screen-ipad-landscape.png" width="1024" />
        <splash height="2048" platform="ios" src="res/screen/ios/screen-ipad-portrait-2x.png" width="1536" />
        <splash height="1024" platform="ios" src="res/screen/ios/screen-ipad-portrait.png" width="768" />
        <splash height="960" platform="ios" src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
        <splash height="480" platform="ios" src="res/screen/ios/screen-iphone-portrait.png" width="320" />
    </platform>
<platform name="android">
    <resource-file src="google-services.json" target="google-services.json" />
</platform>
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-battery-status" spec="^2.0.2" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <plugin name="cordova-plugin-globalization" spec="^1.11.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
    <plugin name="cordova-plugin-local-notification" spec="^0.9.0-beta.2" />
    <plugin name="cordova-plugin-media-capture" spec="^3.0.2" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-sqlite-2" spec="^1.0.6" />
    <plugin name="cordova-plugin-vibration" spec="^3.1.0" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-advanced-geolocation" spec="^1.6.2" />
    <plugin name="cordova-plugin-fcm-with-dependecy-updated" spec="^2.4.0" />
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>Para obtener la ubicación de las fincas y los lotes a muestrear en la aplicación</string>
    </edit-config>
    <engine name="android" spec="^7.1.4" />
    <engine name="ios" spec="^4.5.5" />
</widget>
