<?xml version='1.0' encoding='utf-8'?>
<widget id="com.coffee.cloud.anacaf" version="3.6.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Badge">
        <param name="browser-package" value="Badge" />
    </feature>
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Coffee Cloud Anacafé</name>
    <description>
        Información y herramientas para Productores de Café en Anacafé
    </description>
    <author email="centroclimaorg@gmail.com" href="http://centroclima.org">
        CentroClima
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access origin="*" />
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>Para obtener la ubicación de las fincas y los lotes a muestrear en la aplicación</string>
    </edit-config>
    <preference name="DisallowOverscroll" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name="loadUrlTimeoutValue" value="700000" />
    <preference name="SplashScreenDelay" value="6000" />
    <preference name="Orientation" value="portrait" />
</widget>
